# ---------- STAGE 1: BUILD ----------
FROM eclipse-temurin:21-jdk-alpine AS builder

# L√†m vi·ªác trong th∆∞ m·ª•c /app
WORKDIR /app

# üõ†Ô∏è C√†i Maven th·ªß c√¥ng v√¨ image n√†y KH√îNG c√≥ Maven s·∫µn
RUN apk add --no-cache maven

# Copy pom.xml (tƒÉng hi·ªáu su·∫•t cache)
COPY pom.xml .

# N·∫øu b·∫°n c√≥ nhi·ªÅu module th√¨ copy c√°c pom con, c√≤n n·∫øu ch·ªâ 1 pom th√¨ b·ªè c√°c d√≤ng d∆∞·ªõi ƒëi
# COPY order-domain/pom.xml order-domain/
# COPY order-application-service/pom.xml order-application-service/
# COPY order-dataaccess/pom.xml order-dataaccess/
# COPY order-messaging/pom.xml order-messaging/
# COPY order-container/pom.xml order-container/

# T·∫£i dependencies ƒë·ªÉ t·∫≠n d·ª•ng cache Docker
RUN mvn dependency:go-offline -B

# Copy to√†n b·ªô source code v√†o container
COPY . .

# Build project (t·∫°o file JAR trong /app/target/)
RUN mvn clean package -DskipTests

# ---------- STAGE 2: RUNTIME ----------
FROM eclipse-temurin:21-jre-alpine

# T·∫°o user kh√¥ng ph·∫£i root
RUN addgroup -g 1000 appgroup && adduser -u 1000 -G appgroup -s /bin/sh -D appuser

# L√†m vi·ªác trong /app
WORKDIR /app

# Copy file JAR t·ª´ stage build sang stage run
# ƒê·ªïi t√™n th√†nh app.jar ƒë·ªÉ d·ªÖ ch·∫°y (b·∫°n c√≥ th·ªÉ thay t√™n n·∫øu mu·ªën)
COPY --from=builder /app/target/*.jar app.jar

# Ph√¢n quy·ªÅn cho user kh√¥ng root
RUN chown -R appuser:appgroup /app

# Chuy·ªÉn sang user kh√¥ng root
USER appuser

# M·ªü c·ªïng ·ª©ng d·ª•ng (Spring Boot m·∫∑c ƒë·ªãnh l√† 8080, n·∫øu b·∫°n d√πng 8181 th√¨ s·ª≠a l·∫°i)
EXPOSE 8000

# Health check ‚Äî ki·ªÉm tra endpoint /actuator/health m·ªói 30s
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8000/actuator/health || exit 1

# L·ªánh ch·∫°y ·ª©ng d·ª•ng
ENTRYPOINT ["java", "-jar", "app.jar"]
