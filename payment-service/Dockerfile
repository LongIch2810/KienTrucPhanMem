# ---------- STAGE 1: BUILD ----------
FROM eclipse-temurin:21-jdk-alpine AS builder

WORKDIR /app

# üõ†Ô∏è C√†i Maven th·ªß c√¥ng
RUN apk add --no-cache maven

# Copy pom.xml (tƒÉng hi·ªáu su·∫•t cache)
COPY pom.xml .

# T·∫£i dependencies ƒë·ªÉ t·∫≠n d·ª•ng cache Docker
RUN mvn dependency:resolve -B -U

# Copy to√†n b·ªô source code v√†o container
COPY . .

# Build project (t·∫°o file JAR trong /app/target/)
RUN mvn clean package -DskipTests

# ---------- STAGE 2: RUNTIME ----------
FROM eclipse-temurin:21-jre-alpine

# T·∫°o user kh√¥ng ph·∫£i root
RUN addgroup -g 1000 appgroup && adduser -u 1000 -G appgroup -s /bin/sh -D appuser

WORKDIR /app

# Copy file JAR t·ª´ stage build sang stage run
COPY --from=builder /app/target/*.jar app.jar

# Ph√¢n quy·ªÅn cho user kh√¥ng root
RUN chown -R appuser:appgroup /app

# Chuy·ªÉn sang user kh√¥ng root
USER appuser

# M·ªü c·ªïng ·ª©ng d·ª•ng
EXPOSE 8082

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8082/actuator/health || exit 1

# L·ªánh ch·∫°y ·ª©ng d·ª•ng
ENTRYPOINT ["java", "-jar", "app.jar"]

